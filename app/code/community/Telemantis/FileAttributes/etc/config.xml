<config>
    <modules>
        <Telemantis_FileAttributes>
            <version>0.9.3.2</version>
        </Telemantis_FileAttributes>
    </modules>
    <global>
        <blocks>
            <fileattributes>
                <class>Telemantis_FileAttributes_Block</class>
            </fileattributes>
        </blocks>
        <helpers>
            <fileattributes>
                <class>Telemantis_FileAttributes_Helper</class>
            </fileattributes>
        </helpers>
        <models>
            <fileattributes>
                <class>Telemantis_FileAttributes_Model</class>
            </fileattributes>
        </models>
        <events>
            <catalog_entity_attribute_save_before>
                <observers>
                    <fileattributes>
                        <type>model</type>
                        <class>fileattributes/observer</class>
                        <method>onAttributeSaveBefore</method>
                    </fileattributes>
                </observers>
            </catalog_entity_attribute_save_before>
        </events>
    </global>
    <admin>
        <routers>
            <fileattributes>
                <use>admin</use>
                <args>
                    <module>Telemantis_FileAttributes</module>
                    <frontName>fileattributes</frontName>
                </args>
            </fileattributes>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <adminhtml_product_attribute_types>
                <observers>
                    <fileattributes>
                        <type>model</type>
                        <class>fileattributes/observer</class>
                        <method>addFileAttributeType</method>
                    </fileattributes>
                </observers>
            </adminhtml_product_attribute_types>
        </events>
        <layout>
            <updates>
                <fileattributes>
                    <file>tl/fileattributes.xml</file>
                </fileattributes>
            </updates>
        </layout>
        <translate>
            <modules>
                <fileattributes>
                    <files>
                        <default>Telemantis_FileAttributes.csv</default>
                    </files>
                </fileattributes>
            </modules>
        </translate>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <fileattributes>
                                    <title>File Attributes</title>
                                    <sort_order>20</sort_order>
                                    <children>
                                        <obsolete_files translate="title" module="fileattributes">
                                            <title>Manage Obsolete Files</title>
                                            <sort_order>10</sort_order>
                                        </obsolete_files>
                                        <setup translate="title" module="fileattributes">
                                            <title>Setup</title>
                                            <sort_order>20</sort_order>
                                        </setup>
                                    </children>
                                </fileattributes>
                                <config>
                                    <children>
                                        <fileattributes translate="title" module="fileattributes">
                                            <title>File Attributes Configuration</title>
                                        </fileattributes>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <menu>
            <system>
                <children>
                    <fileattributes translate="title" module="fileattributes">
                        <title>File Attributes</title>
                        <sort_order>20</sort_order>
                        <children>
                            <obsolete_files translate="title" module="fileattributes">
                                <title>Manage Obsolete Files</title>
                                <sort_order>10</sort_order>
                                <action>fileattributes/adminhtml_obsolete_files/index</action>
                            </obsolete_files>
                            <setup translate="title" module="fileattributes">
                                <title>Setup</title>
                                <sort_order>20</sort_order>
                                <action>adminhtml/system_config/edit/section/fileattributes/</action>
                            </setup>
                        </children>
                    </fileattributes>
                </children>
            </system>
        </menu>
    </adminhtml>
    <default>
        <general>
            <validator_data>
                <input_types>
                    <blfa_file>blfa_file</blfa_file>
                </input_types>
            </validator_data>
        </general>
        <fileattributes>
            <configuration>
                <file_save_moment>after</file_save_moment>
                <exceptions_handling_mode>log</exceptions_handling_mode>
                <allow_mime_header_check>0</allow_mime_header_check>
            </configuration>
        </fileattributes>
    </default>
</config>
